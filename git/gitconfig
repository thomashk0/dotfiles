[core]
    editor = vim

[user]
    email = thomas.hiscock@wanadoo.fr
    name = Thomas Hiscock

[color]
    ui = true

[color.branch]
    upstream = cyan

[alias]
    cc = commit -v
    ca = commit -v --amend
    au = add -u
    co = checkout
    po = push origin
    st = status
    stu = status --untracked=no
    lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    lgg = log --pretty=format:'%h %s' --graph --all

[credential]
    helper = cache --timeout=43200
